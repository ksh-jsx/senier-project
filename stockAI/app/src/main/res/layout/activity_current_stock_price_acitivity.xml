<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    tools:context=".CurrentStockPriceAcitivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/searchWrapper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <EditText
                android:id="@+id/editStockName"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:hint="종목 명"
                android:inputType="text"
                tools:visibility="visible" />

            <Button
                android:id="@+id/buttonSearch"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="검색"
                android:textSize="18dp"
                tools:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/articleWrapper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="vertical">
            <ListView
                android:id="@+id/stockList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/priceBox"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:background="@drawable/radius_red"
                android:visibility="gone"
                tools:visibility="visible">
                <TextView
                    android:id="@+id/priceView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:text="현재 주가"
                    android:layout_weight="4"
                    android:textSize="40dp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/priceView2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="left"
                    android:text="변동치"
                    android:layout_weight="3"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/buttonForBuy"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="2"
                    app:backgroundTint="@color/red"
                    android:text="매수"
                    android:textColor="@color/second"
                    android:textSize="25dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/buttonForSell"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="2"
                    app:backgroundTint="@color/blue"
                    android:text="매도"
                    android:textColor="@color/second"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


  </androidx.constraintlayout.widget.ConstraintLayout>
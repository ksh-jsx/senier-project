<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StockDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_stock_name"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginHorizontal="10sp"
            android:text="주식 이름"
            android:fontFamily="@font/nanumsquare_eb"
            android:layout_weight="1"
            android:textSize="45sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:id="@+id/priceBox"
            android:layout_width="match_parent"
            android:layout_margin="10sp"
            android:layout_height="20sp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="@drawable/radius_red"
>
            <TextView
                android:id="@+id/priceView"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10sp"
                android:text="현재 주가"
                android:fontFamily="@font/nanumsquare_eb"
                android:layout_weight="1.5"
                android:textSize="45sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/priceView2"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginHorizontal="20sp"
                android:gravity="center_vertical"
                android:text="변동치"
                android:fontFamily="@font/nanumsquare_eb"
                android:layout_weight="1"
                android:textSize="35sp"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/centerBox"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="5"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="10sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/nanumsquare_eb"
                        android:textSize="25sp"
                        android:text="최고가: "
                        android:paddingTop="10sp"/>

                    <TextView
                        android:id="@+id/tv19"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/nanumsquare_eb"
                        android:gravity="center"
                        android:paddingTop="10sp"
                        android:text="최고가"
                        android:textColor="@color/red"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/nanumsquare_eb"
                        android:textSize="25sp"
                        android:text="최저가: "
                        android:paddingTop="10sp"/>
                    <TextView
                        android:id="@+id/tv20"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:fontFamily="@font/nanumsquare_eb"
                        android:textSize="25sp"
                        android:text="최저가"
                        android:textColor="@color/blue"
                        android:paddingTop="10sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/nanumsquare_eb"
                        android:textSize="25sp"
                        android:text="시가: "
                        android:paddingTop="10sp"/>
                    <TextView
                        android:id="@+id/tv18"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:fontFamily="@font/nanumsquare_eb"
                        android:textSize="25sp"
                        android:text="시가"
                        android:textColor="@color/black"
                        android:paddingTop="10sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/nanumsquare_eb"
                        android:textSize="25sp"
                        android:text="PER: "
                        android:paddingTop="10sp"/>
                    <TextView
                        android:id="@+id/tv43"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:fontFamily="@font/nanumsquare_eb"
                        android:textSize="25sp"
                        android:text="PER"
                        android:textColor="@color/black"
                        android:paddingTop="10sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/tv_expectPercent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/nanumsquare_eb"
                    android:textSize="25sp"
                    android:text="xx% 확률로 xx 예상되는 종목입니다!"/>
                <Button
                    android:id="@+id/btn_ai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    app:backgroundTint="@color/second"
                    android:text="자동투자 \n종목으로 넣기"
                    android:fontFamily="@font/nanumsquare_eb"
                    android:textColor="@color/white"
                    android:textSize="35sp"    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/BSbuttonBox"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1.5">

            <Button
                android:id="@+id/buttonForBuy"
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10sp"
                android:layout_weight="1"
                app:backgroundTint="@color/red"
                android:text="매수"
                android:fontFamily="@font/nanumsquare_eb"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <Button
                android:id="@+id/buttonForSell"
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10sp"
                android:layout_weight="1"
                app:backgroundTint="@color/blue"
                android:text="매도"
                android:fontFamily="@font/nanumsquare_eb"
                android:textColor="@color/white"
                android:textSize="40sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
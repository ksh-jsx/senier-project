<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="10sp"
    android:layout_marginHorizontal="10sp"
    tools:context=".Tab2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_marginBottom="40dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:fontFamily="@font/nanumsquare_eb"
                android:textSize="35dp"
                android:text="자동투자 설정: "
                android:textColor="@color/second" />
            <Button
                android:id="@+id/button_for_autoTrade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nanumsquare_eb"
                android:textSize="35dp"
                android:text="켜기" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/nanumsquare_eb"
                    android:gravity="center"
                    android:text="투자강도 설정: "
                    android:textColor="@color/second"
                    android:textSize="35dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/textView_for_risk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:fontFamily="@font/nanumsquare_eb"
                    android:textColor="@color/main"
                    android:textSize="35dp"
                    android:text="중간" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/main"
                    android:fontFamily="@font/nanumsquare_eb"
                    android:textSize="25dp"
                    android:text="매우\n낮음"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>

                <SeekBar
                    android:id="@+id/seekBar_for_risk"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="6"
                    android:max="4"
                    android:min="0"
                    android:progress="2"
                    android:progressDrawable="@drawable/seekbar"
                    android:thumb="@drawable/seekbar_thumb" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/main"
                    android:fontFamily="@font/nanumsquare_eb"
                    android:textSize="25dp"
                    android:text="매우\n높음"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginVertical="10dp"
            android:background="@color/gray2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/nanumsquare_eb"
            android:textSize="35dp"
            android:text="투자 대상 종목"
            android:textColor="@color/second"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_myStock"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/interesting_stock_list"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>